<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TableRow>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Street: "
            style="@style/content"/>
        <EditText android:id="@+id/street"
            android:singleLine="true"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2301 Pebble Vale Dr."
            android:hint="Enter the street"
            style="@style/content"/>
    </TableRow>

    <TableRow android:id="@+id/streetValid"
        android:gravity="center_horizontal"
        android:visibility="invisible">
        <TextView
            android:layout_column="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#F44336"
            android:text="Please enter street"
            style="@style/content"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="City: "
            style="@style/content"/>
        <EditText android:id="@+id/city"
            android:singleLine="true"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Plano"
            android:hint="Enter the city"
            style="@style/content"/>
    </TableRow>

    <TableRow android:id="@+id/cityValid"
        android:gravity="center_horizontal"
        android:visibility="invisible">
        <TextView
            android:layout_column="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#F44336"
            android:text="Please enter city"
            style="@style/content"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="State: "
            style="@style/content"
            android:layout_gravity="center_vertical" />
        <Spinner android:id="@+id/state"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/content"/>
    </TableRow>

    <TableRow  android:id="@+id/stateValid"
        android:gravity="center_horizontal"
        android:visibility="invisible">
        <TextView
            android:layout_column="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#F44336"
            android:text="Please enter state"
            style="@style/content"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Degree: "
            style="@style/content"
            android:layout_gravity="center_vertical" />
        <RadioGroup android:id="@+id/degree"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/us"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Fahrenheit"
                style="@style/content" />
            <RadioButton
                android:id="@+id/si"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Celsius"
                style="@style/content" />
        </RadioGroup>
    </TableRow>

    <TableRow android:layout_marginBottom="64dp"
        android:layout_marginTop="64dp">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_submit"
            android:onClick="submitForm"
            style="@style/content"/>
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:onClick="clearForm"
            style="@style/content"/>
    </TableRow>
</TableLayout>

